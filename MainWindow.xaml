<Window x:Class="MealPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MealPlanner"
        mc:Ignorable="d"
        Title="MainWindow" 
        >
    <Grid>
        <ComboBox ItemsSource="{Binding RecipeList}" SelectedItem="{Binding SelectedRecipe}" Width="100" Height="30"/>
        <ListBox ItemsSource="{Binding IngredientList}" />

    </Grid>
</Window>
